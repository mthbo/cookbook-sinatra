<h1>Destroy a recipe</h1>

<form id="deleteRecipe" action="/recipes" method="delete">
  <div class="form-group">
    <label for="recipeNumber">Which recipe do you want to destroy?</label>
    <input type="text" class="form-control" id="recipeNumber" placeholder="Number" name="recipe_to_destroy[index]">
  </div>
  <button type="submit" class="btn btn-default">Delete recipe</button>
</form>

<div class="panel panel-default">
  <% @recipes.each_with_index do |recipe, index| %>
    <div class="panel-heading">
      <% tested = recipe.tested? ? "tested" : "not tested" %>
      <h3 class="panel-title"><%= "#{index + 1} | #{recipe.name}" =%></h3>
    </div>
    <div class="panel-body">
      <p><strong><%= "#{tested}" =%></strong></p>
      <p><%= "#{recipe.cooking_time} - #{recipe.difficulty} " =%></p>
      <p><%= "#{recipe.description}" =%></p>
    </div>
  <% end %>
</div>
